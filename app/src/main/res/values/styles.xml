<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainClickableCardStyle">
        <item name = "android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/grayForClickableCards</item>
        <item name = "android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="mainActivityCards" parent="mainClickableCardStyle">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="textViewInCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">7dp</item>
    </style>
</resources>