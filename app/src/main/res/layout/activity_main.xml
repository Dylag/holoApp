<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:foreground="@color/darkerColor"
        android:id="@+id/activity_main_constraintLayout">

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2" app:rowCount="4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:text="@string/activity_main_choose_an_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_gravity="center"
                android:layout_margin="20dp"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_columnSpan="2" android:id="@+id/activity_main_debugLabel" android:textSize="34sp"/>

        <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                style="@style/mainActivityCards"
                app:layout_row="1" android:id="@+id/photoCard"
                app:layout_column="0"
                app:layout_columnSpan="1"
                android:layout_marginRight="10dp" android:onClick="photoCard_onClick">

            <TextView
                    android:text="@string/activity_main_static_image"
                    style="@style/textViewInCardStyle"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                style="@style/mainActivityCards"
                app:layout_row="1" android:id="@+id/gifCard"
                app:layout_column="1"
                app:layout_columnSpan="1" android:layout_marginLeft="10dp"
                android:onClick="gifCard_onClick">

            <TextView
                    android:text="@string/activity_main_gif"
                    style="@style/textViewInCardStyle"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="100dp"
                style="@style/mainActivityCards"
                app:layout_row="2" android:id="@+id/videoCard"
                app:layout_columnSpan="2" android:onClick="videoCard_onClick" android:clickable="false">

            <TextView
                    android:text="@string/activity_main_video"
                    style="@style/textViewInCardStyle"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="100dp"
                style="@style/mainActivityCards"
                app:layout_row="3" android:id="@+id/exitCard"
                app:layout_columnSpan="2">

            <TextView
                    android:text="@string/activity_main_exit"
                    style="@style/textViewInCardStyle"/>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>