<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VideoActivity">
    <GridView
            android:id = "@+id/videoGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <com.warnyul.android.widget.FastVideoView
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/videoViewBottom"
                android:layout_marginTop="25dp"
                android:rotation="180" tools:ignore="SpeakableTextPresentCheck"/>
        <com.warnyul.android.widget.FastVideoView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/videoViewLeft"
                android:layout_marginRight="25dp"
                android:rotation="-90" tools:ignore="SpeakableTextPresentCheck"/>
        <com.warnyul.android.widget.FastVideoView
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/videoViewTop"
                android:layout_marginBottom="25dp"
                tools:ignore="SpeakableTextPresentCheck"/>
        <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp" android:id="@+id/activity_video_centralCardView"
                app:cardBackgroundColor="@color/redHalf"
        />
        <com.warnyul.android.widget.FastVideoView
                android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/videoViewRight"
                android:layout_marginStart="25dp" android:rotation="90"
                tools:ignore="SpeakableTextPresentCheck"/>
    </GridView>
</androidx.constraintlayout.widget.ConstraintLayout>